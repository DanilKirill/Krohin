<Window x:Class="WpfApp1.AddBludoZakaz"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="AddBludoZakaz" Height="219" Width="360.5">
    <Grid Margin="0,0,-3,-3">
        <ComboBox Name="cbBluda" HorizontalAlignment="Left" Margin="32,110,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBlock FontSize="18" TextAlignment="Center" Margin="10,19,10,0" TextWrapping="Wrap" Text="Добавление блюда в заказ" VerticalAlignment="Top" Height="39"/>
        <Button Name="btnPlus" Content="+" HorizontalAlignment="Left" Margin="218,109,0,0" VerticalAlignment="Top" Width="20" Background="#FF3DEA4D" BorderBrush="{x:Null}" Foreground="Black"/>
        <Button Name="btnMinus" Content="-" HorizontalAlignment="Left" Margin="298,109,0,0" VerticalAlignment="Top" Width="20" Background="#FFEA553D" BorderBrush="{x:Null}" Foreground="Black"/>
        <TextBlock Name="lblCount" TextAlignment="Center" HorizontalAlignment="Left" Margin="238,112,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="60"/>
        <Label Content="Блюдо" HorizontalAlignment="Left" Margin="32,79,0,0" VerticalAlignment="Top"/>
        <Label Content="Количество" HorizontalAlignment="Left" Margin="218,81,0,0" VerticalAlignment="Top"/>
        <Button Name="btnAdd" Content="Добавить" HorizontalAlignment="Left" Margin="140,160,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
